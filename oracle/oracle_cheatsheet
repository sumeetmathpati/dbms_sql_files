# View current database
SHOW con_name;

# Create user USR with password 1245
CREATE USER USR IDENTIFIED BY 12345;

# Grant permission to user USR
GRANT CONNECT, RESOURCE, DBA TO USR;

# Grant login permission to USR
GRANT create session to USR;

# Allow USR to create table;
GRANT create table to USR;

# Grant table permissions to USR on table books which is part of schema schema.
GRANT
  SELECT,
  INSERT,
  UPDATE,
  DELETE
ON
  schema.books
TO
  USR;